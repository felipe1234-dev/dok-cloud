{
    "name": "dok-fortress-api",
    "scripts": {
        "lint": "eslint --ext .js,.ts .",
        "update-globals": "npm i dok-fortress-globals@latest",
        "prebuild": "rm -rf build && npm run update-globals",
        "build": "tsc --esModuleInterop",
        "postbuild": "node scripts/postbuild.js",
        "build:watch": "npm run build --watch",
        "preserve": "npm run build",
        "serve": "npm run build:watch && firebase serve --port 5001 --only functions",
        "preshell": "npm run build",
        "shell": "firebase functions:shell",
        "start": "npm run shell",
        "predeploy": "npm run build",
        "deploy": "firebase deploy --only functions",
        "logs": "firebase functions:log"
    },
    "engines": {
        "node": "18"
    },
    "main": "build/index.js",
    "dependencies": {
        "@google-cloud/storage": "^6.9.2",
        "axios": "^1.3.2",
        "bcrypt": "^5.1.0",
        "busboy": "^1.6.0",
        "cors": "^2.8.5",
        "dok-fortress-globals": "^1.1.0",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "ffmpeg": "0.0.4",
        "ffprobe-static": "^3.1.0",
        "firebase-admin": "^11.10.1",
        "firebase-functions": "^3.24.1",
        "fluent-ffmpeg": "^2.1.2",
        "formidable": "^3.5.0",
        "istanbul-lib-coverage": "^3.2.0",
        "istanbul-lib-report": "^3.0.1",
        "istanbul-reports": "^3.1.6",
        "mime-types": "^2.1.35",
        "multiparty": "^4.2.3",
        "node": "^20.6.0",
        "nodemailer": "^6.9.1",
        "portscanner": "^2.2.0",
        "socket.io": "^4.6.1",
        "yargs": "^17.7.2",
        "yargs-parser": "^21.1.1"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/busboy": "^1.5.0",
        "@types/express": "^4.17.17",
        "@types/ffprobe-static": "^2.0.1",
        "@types/fluent-ffmpeg": "^2.1.20",
        "@types/formidable": "^3.4.0",
        "@types/istanbul-lib-coverage": "^2.0.4",
        "@types/istanbul-lib-report": "^3.0.0",
        "@types/istanbul-reports": "^3.0.1",
        "@types/mime-types": "^2.1.1",
        "@types/module-alias": "^2.0.1",
        "@types/multer": "^1.4.7",
        "@types/multiparty": "^0.0.33",
        "@types/node": "^20.6.1",
        "@types/nodemailer": "^6.4.7",
        "@types/portscanner": "^2.1.1",
        "@types/yargs": "^17.0.24",
        "@types/yargs-parser": "^21.0.0",
        "@typescript-eslint/eslint-plugin": "^5.12.0",
        "@typescript-eslint/parser": "^5.12.0",
        "eslint": "^8.9.0",
        "eslint-config-google": "^0.14.0",
        "eslint-plugin-import": "^2.25.4",
        "firebase-functions-test": "^0.2.0",
        "module-alias": "^2.2.2",
        "prettier": "^3.0.0",
        "tsconfig-paths": "^3.14.2",
        "typescript": "^4.9.5"
    },
    "private": true
}
